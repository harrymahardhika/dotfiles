### --- Mod key ---
set $mod Mod4

### --- Font ---
font pango:JetBrainsMono Nerd Font 9

### --- Variables ---
set $terminal ghostty
# set $browser brave-browser-stable
set $browser zen-browser
set $webapp $HOME/scripts/webapp
set $file_manager nautilus

### --- Autostart applications ---
exec_always swayidle -w \
            timeout 300 '$HOME/.config/sway/lock.sh' \
            timeout 600 'swaymsg "output * dpms off"' \
            resume 'swaymsg "output * dpms on"' \
            before-sleep '$HOME/.config/sway/lock.sh'

exec_always pkill waybar
exec_always waybar -c $HOME/.config/waybar/sway-config.jsonc -s $HOME/.config/waybar/sway-style.css
exec_always --no-startup-id bash -c "while true; do \"$HOME/.config/i3/battery-warning.sh\"; sleep 60; done"
exec_always swww-daemon
exec_always --no-startup-id "$HOME/.config/sway/set-wallpaper.sh"

exec systemctl --user import-environment XDG_SESSION_TYPE XDG_CURRENT_DESKTOP WAYLAND_DISPLAY
exec --no-startup-id dunst
exec --no-startup-id udiskie -n
exec --no-startup-id dropbox start
exec_always wl-paste --watch cliphist store

### --- Keybindings ---
floating_modifier $mod
bindsym $mod+Return exec $terminal
bindsym $mod+m exec $browser
bindsym $mod+q kill
bindsym $mod+Shift+w exec --no-startup-id $HOME/.config/sway/set-wallpaper.sh
bindsym $mod+d exec --no-startup-id rofi -show drun
# bindsym $mod+d exec $HOME/.config/wofi/launch.sh
bindsym $mod+Shift+t exec $HOME/.config/sway/toggle-transparency.sh
bindsym $mod+Shift+x exec wlogout -b 4
bindsym $mod+b exec pkill -SIGUSR1 waybar
bindsym $mod+v exec --no-startup-id $HOME/scripts/clipboard-history.sh

bindsym $mod+a exec --no-startup-id $HOME/scripts/webapp-launcher.sh

### --- Navigation ---
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Left  focus left
bindsym $mod+Down  focus down
bindsym $mod+Up    focus up
bindsym $mod+Right focus right

### --- Move windows ---
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+Left  move left
bindsym $mod+Shift+Down  move down
bindsym $mod+Shift+Up    move up
bindsym $mod+Shift+Right move right

### --- Split layout ---
bindsym $mod+Shift+b split h
bindsym $mod+Shift+v split v

### --- Fullscreen & layout toggle ---
bindsym $mod+f fullscreen toggle
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

### --- Floating toggle ---
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

### --- Workspaces ---
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

### --- Switch workspaces ---
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

### --- Move windows to workspaces ---
bindsym $mod+Shift+1 move container to workspace number $ws1; workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2; workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3; workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4; workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5; workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6; workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7; workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8; workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9; workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10; workspace number $ws10

### --- Other workspace settings ---
focus_follows_mouse yes

### --- Gaps ---
gaps inner 2
gaps outer 0
smart_gaps inverse_outer

### --- Toggle gaps ---
bindsym $mod+Shift+g gaps inner current set 0; gaps outer current set 0
bindsym $mod+g gaps inner current plus 2

### --- Borders ---
default_border none
# default_border pixel 2
default_floating_border none
hide_edge_borders smart

### --- Reload, restart, exit ---
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r exec "swaymsg reload"
bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'

### --- Resize mode ---
bindsym $mod+r mode "resize"
mode "resize" {
    bindsym h      resize shrink width 10 px or 10 ppt
    bindsym j      resize grow height 10 px or 10 ppt
    bindsym k      resize shrink height 10 px or 10 ppt
    bindsym l      resize grow width 10 px or 10 ppt
    bindsym Left   resize shrink width 10 px or 10 ppt
    bindsym Down   resize grow height 10 px or 10 ppt
    bindsym Up     resize shrink height 10 px or 10 ppt
    bindsym Right  resize grow width 10 px or 10 ppt
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

### --- App assignments ---
assign [class="vesktop"] 4

### --- Screenshot ---
bindsym $mod+Shift+p exec sh -c 'grim -g "$(slurp)" - | wl-copy'

# Natural scrolling (touchpad)
input type:touchpad {
    tap enabled                   # Tapping Enabled (1)
    natural_scroll enabled        # Natural Scrolling Enabled (1)
    scroll_method two_finger      # Scroll Method Enabled (0 0 1)
    dwt enabled                   # Disable While Typing Enabled (1)
    pointer_accel 0.4             # Pointer Acceleration (0.5)
}

# Example for a specific mouse
input "Logitech Wireless Mouse" {
    natural_scroll enabled
    scroll_method on_button_down
    pointer_accel 0.4
}

# Audio volume
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle

# Brightness
bindsym XF86MonBrightnessUp exec brightnessctl set 10%+
bindsym XF86MonBrightnessDown exec brightnessctl set 10%-

