### --- Mod key ---
set $mod Mod4

### --- Font ---
font pango:JetBrainsMono Nerd Font 9

### --- Output Configuration ---
# Laptop display
output eDP-1 {
    resolution 1920x1080@60.008Hz
    position 0,0
    adaptive_sync on
}

# External monitor (27" 1920x1080)
output HDMI-A-2 {
    resolution 1920x1080@60Hz
    position 1920,0
    adaptive_sync on
}

### --- Laptop-specific settings ---
# Lid close/suspend handling: Managed by systemd-logind (default: suspend on lid close)
# swayidle's 'before-sleep' hook will lock the screen before suspend
# This is more reliable than manual DPMS control and handles all hardware properly

# Power management - reduce brightness on battery
# You can adjust these values as needed

### --- Variables ---
set $terminal ghostty
# set $terminal $HOME/.local/bin/kitty
# set $browser brave-browser-stable
set $browser zen-browser
set $webapp $HOME/scripts/webapp
set $file_manager nautilus

### --- Autostart applications ---
# Systemd services handle: waybar, swayidle, cliphist, dunst, udiskie, battery-warning
# Enable them with: systemctl --user enable waybar swayidle cliphist dunst udiskie battery-warning.timer
# Note: swww-daemon is started by sway config below (not enabled in systemd)

# Session environment - import variables to systemd
exec systemctl --user import-environment XDG_SESSION_TYPE XDG_CURRENT_DESKTOP WAYLAND_DISPLAY SWAYSOCK
exec systemctl --user restart xdg-desktop-portal-gtk.service xdg-desktop-portal.service

# Start swww-daemon after environment is ready
exec systemctl --user start swww-daemon.service

# Restart waybar on config reload to pick up any waybar config changes
# Use exec_always with a delay to ensure SWAYSOCK is imported first
exec_always sleep 1 && systemctl --user import-environment SWAYSOCK && systemctl --user restart waybar

# Wallpaper (requires swww-daemon.service to be running)
exec sleep 2 && "$HOME/.config/sway/set-wallpaper.sh"

# Dropbox
exec dropbox start

### --- Keybindings ---
floating_modifier $mod
bindsym $mod+Return exec $terminal
bindsym $mod+m exec $browser
bindsym $mod+q kill
bindsym $mod+Shift+w exec --no-startup-id $HOME/.config/sway/set-wallpaper.sh
bindsym $mod+d exec --no-startup-id rofi -show drun
bindsym $mod+Shift+t exec $HOME/.config/sway/toggle-transparency.sh
bindsym $mod+Shift+x exec wlogout -b 5
bindsym $mod+x exec $HOME/.config/sway/lock.sh
bindsym $mod+b exec pkill -SIGUSR1 waybar
bindsym $mod+v exec --no-startup-id $HOME/scripts/clipboard-history.sh

bindsym $mod+a exec --no-startup-id $HOME/scripts/webapp-launcher.sh

### --- Navigation ---
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Left  focus left
bindsym $mod+Down  focus down
bindsym $mod+Up    focus up
bindsym $mod+Right focus right

### --- Move windows ---
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+Left  move left
bindsym $mod+Shift+Down  move down
bindsym $mod+Shift+Up    move up
bindsym $mod+Shift+Right move right

### --- Split layout ---
bindsym $mod+Shift+b split h
bindsym $mod+Shift+v split v

### --- Fullscreen & layout toggle ---
bindsym $mod+f exec $HOME/.config/sway/toggle-gaps-fullscreen.sh
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

### --- Floating toggle ---
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

### --- Workspaces ---
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Enable workspace back and forth
workspace_auto_back_and_forth yes

### --- Switch workspaces ---
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

### --- Move windows to workspaces ---
bindsym $mod+Shift+1 move container to workspace number $ws1; workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2; workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3; workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4; workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5; workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6; workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7; workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8; workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9; workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10; workspace number $ws10

### --- Other workspace settings ---
focus_follows_mouse yes

# Move workspace to different output (for dual monitor setup)
bindsym $mod+Ctrl+Left move workspace to output left
bindsym $mod+Ctrl+Right move workspace to output right
bindsym $mod+Ctrl+Up move workspace to output up
bindsym $mod+Ctrl+Down move workspace to output down

### --- Gaps ---
gaps inner 2
gaps outer 0
smart_gaps inverse_outer

### --- Toggle gaps ---
bindsym $mod+Shift+g gaps inner current set 0; gaps outer current set 0
bindsym $mod+g gaps inner current plus 2

### --- Borders ---
default_border none
default_floating_border none
hide_edge_borders smart

### --- Reload, restart, exit ---
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r exec "swaymsg reload"
bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'

### --- Resize mode ---
bindsym $mod+r mode "resize"
mode "resize" {
    bindsym h      resize shrink width 10 px or 10 ppt
    bindsym j      resize grow height 10 px or 10 ppt
    bindsym k      resize shrink height 10 px or 10 ppt
    bindsym l      resize grow width 10 px or 10 ppt
    bindsym Left   resize shrink width 10 px or 10 ppt
    bindsym Down   resize grow height 10 px or 10 ppt
    bindsym Up     resize shrink height 10 px or 10 ppt
    bindsym Right  resize grow width 10 px or 10 ppt
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

### --- App assignments ---
assign [class="vesktop"] 4
assign [app_id="vesktop"] 4

### --- Window rules ---

# Floating windows - dialogs and utilities
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [window_role="dialog"] floating enable
for_window [window_role="menu"] floating enable
for_window [window_type="dialog"] floating enable
for_window [window_type="menu"] floating enable
for_window [title="Preferences$"] floating enable
for_window [title="Settings$"] floating enable

# File pickers
for_window [title="^Open"] floating enable
for_window [title="^Save"] floating enable
for_window [app_id="xdg-desktop-portal-gtk"] floating enable
for_window [app_id="nautilus" title="^Properties"] floating enable

# System utilities that should float
for_window [app_id="pavucontrol"] floating enable, resize set 800 600
for_window [app_id="blueman-manager"] floating enable, resize set 700 500
for_window [app_id="nm-connection-editor"] floating enable
for_window [title="^nmtui"] floating enable
for_window [app_id="gnome-calculator"] floating enable

# Picture-in-Picture
for_window [title="Picture-in-Picture"] floating enable, sticky enable, resize set 640 360

# Authentication dialogs
for_window [app_id="polkit-gnome-authentication-agent-1"] floating enable
for_window [title="^Authentication Required"] floating enable

# Inhibit idle for fullscreen apps (video players, presentations)
for_window [class=".*"] inhibit_idle fullscreen
for_window [app_id=".*"] inhibit_idle fullscreen

# Specific apps to inhibit idle
for_window [app_id="mpv"] inhibit_idle visible
for_window [app_id="vlc"] inhibit_idle visible
for_window [class="zoom"] inhibit_idle visible
for_window [title=".*Zoom Meeting.*"] inhibit_idle visible

# Browser-specific rules
for_window [title="Firefox — Sharing Indicator"] floating enable, sticky enable
for_window [title="Chrome — Sharing Indicator"] floating enable, sticky enable

# Focus urgent windows automatically
for_window [urgent="latest"] focus

### --- Screenshot ---
bindsym $mod+Shift+p exec sh -c 'grim -g "$(slurp)" - | wl-copy'

### --- Input Devices ---

# Touchpad (Synaptics)
input "2:7:SynPS/2_Synaptics_TouchPad" {
    tap enabled
    natural_scroll enabled
    scroll_method two_finger
    dwt enabled                    # Disable While Typing
    pointer_accel 0.4
    accel_profile adaptive
    middle_emulation enabled       # Three-finger tap for middle click
}

# TrackPoint
input "2:10:TPPS/2_ALPS_TrackPoint" {
    pointer_accel 0.3
    accel_profile flat
    scroll_method on_button_down
    scroll_button 275              # Middle button (button 2) for scrolling
}

# Logitech Wireless Mouse
input "1133:16468:Logitech_Wireless_Mouse" {
    natural_scroll enabled
    pointer_accel 0.4
    accel_profile adaptive
}

# Audio volume
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle

# Brightness
bindsym XF86MonBrightnessUp exec brightnessctl set 10%+
bindsym XF86MonBrightnessDown exec brightnessctl set 10%-

